<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Console Appender: Logs messages to the server console (e.g., Tomcat's catalina.out) -->
        <Console name="Console" target="SYSTEM_OUT">
            <!-- Define the pattern of the log message -->
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <!-- Rolling File Appender: Logs messages to a file, creating new ones when size/time limits are met -->
        <RollingFile name="RollingFile" fileName="logs/technik-team-app.log"
                     filePattern="logs/technik-team-app-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <!-- Rollover based on time (daily) -->
                <TimeBasedTriggeringPolicy />
                <!-- Rollover based on size (10 MB) -->
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
            <!-- Keep up to 10 archived log files -->
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- Root Logger: Default logger for all classes -->
        <Root level="INFO">
            <!-- Sends log messages to both the Console and the RollingFile appender -->
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Root>

        <!-- Specific Logger for our application package -->
        <!-- Set to DEBUG to get more detailed logs from our app during development -->
        <Logger name="de.technikteam" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
        </Logger>
    </Loggers>
</Configuration>