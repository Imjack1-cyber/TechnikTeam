<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <!-- 
          THIS IS THE FIX: Use the 'catalina.base' system property provided by Tomcat
          to create the logs folder in a guaranteed writable location.
          e.g., .../wst.server.core/tmp0/logs
        -->
        <Property name="log-path">${sys:catalina.base}/logs</Property>
    </Properties>

    <Appenders>
        <!-- Console Appender (for viewing logs in Eclipse console) -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>

        <!-- Rolling File Appender (for writing logs to a file) -->
        <RollingFile name="RollingFile"
                     fileName="${log-path}/technik-team-app.log"
                     filePattern="${log-path}/technik-team-app-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10 MB" />
            </Policies>
            <DefaultRolloverStrategy max="10" />
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- Log messages from your application at DEBUG level -->
        <Logger name="de.technikteam" level="debug" additivity="false">
            <AppenderRef ref="Console" />
            <AppenderRef ref="RollingFile" />
        </Logger>

        <!-- Root logger for all other libraries, set to a higher level like WARN -->
        <Root level="warn">
            <AppenderRef ref="Console" />
            <AppenderRef ref="RollingFile" />
        </Root>
    </Loggers>
</Configuration>