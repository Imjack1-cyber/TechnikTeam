{
	"timestamp": {
		"$resolver": "timestamp",
		"pattern": {
			"format": "yyyy-MM-dd'T'HH:mm:ss.SSS'Z'",
			"timeZone": "UTC"
		}
	},
	"level": {
		"$resolver": "level",
		"field": "name"
	},
	"loggerName": {
		"$resolver": "logger",
		"field": "name"
	},
	"threadName": {
		"$resolver": "thread",
		"field": "name"
	},
	"message": {
		"$resolver": "message",
		"stringified": true
	},
	"thrown": {
		"$resolver": "exception",
		"stackTrace": {
			"stringified": true
		}
	},
	"context": {
		"$resolver": "mdc"
	}
}